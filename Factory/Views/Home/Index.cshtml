@{Layout = "_Layout";}

@using Factory.Models;
@model Factory.Models.EngineerMachine;

<div class="p-5 mb-4 bg-light rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold">Dr. Sillystringz's Factory</h1>
    <hr>
    <p class="col-md-8 fs-4">Manage your engineers & machines</p>
  </div>
</div>
<div class="row align-items-md-stretch">
  <div class="col-md-6">
    <div class="h-100 p-5 text-white bg-dark rounded-3">
      <h2>Engineers</h2>
      <p>
        @if(@ViewBag.Engineers.Count == 0) {
          <em>No engineers have been entered</em>
        } @foreach(Engineer engineer in ViewBag.Engineers) {
          @Html.ActionLink($"{engineer.Company}", "Details", "Engineers", new {id= engineer.EngineerId})<br>
        }
      </p>
      <div class="row">
        <form method="get" action="/Engineers/Create">
          <button class="btn btn-outline-light" type="submit">Add Engineer</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="h-100 p-5 text-white bg-dark rounded-3">
      <h2>Machines</h2>
      <p>
        @if(@ViewBag.Machines.Count == 0) {
          <em>No machines have been entered</em>
        } @foreach(Machine machine in ViewBag.Machines) {
          @Html.ActionLink($"{machine.MakeModel}", "Details", "Machines", new {id= machine.MachineId})<br>
        }
      </p>
      <div class="row">
        <form method="get" action="/Machines/Create">
          <button class="btn btn-outline-light" type="submit">Add Machine</button>
        </form>
      </div>
    </div>
  </div>
</div>
