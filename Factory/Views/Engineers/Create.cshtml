@{Layout = "_Layout";}

@using Factory.Models;
@model Factory.Models.Engineer;


<form>
  <h2>New Engineer</h2>
  <p></p>
  <hr>
  @using (Html.BeginForm()) {
    <div class="mb-3">
      @Html.LabelFor(model => model.Company)
      @Html.TextBoxFor(model => model.Company, new {@class = "form-control", placeholder = "Company", required="required"})
    </div>
    <div class="mb-3">
      @Html.LabelFor(model => model.Rep)
      @Html.TextBoxFor(model => model.Rep, new {@class = "form-control", placeholder = "Name"})
    </div>
    <div class="mb-3">
      @Html.LabelFor(model => model.Phone)
      @Html.TextBoxFor(model => model.Phone, new {@class = "form-control", placeholder = "(###)###-####", required="required"})
    </div>
    <div class="mb-3">
      @Html.LabelFor(model => model.Email)
      @Html.TextBoxFor(model => model.Email, new {@class = "form-control", placeholder = "email@email.com", required="required"})
    </div>
    <div class="mb-3">
      @Html.LabelFor(model => model.Address1)
      @Html.TextBoxFor(model => model.Address1, new {@class = "form-control", placeholder = "Street", required="required"})
      @Html.TextBoxFor(model => model.Address2, new {@class = "form-control", placeholder = "City, State Zipcode", required="required"})
    </div>
    <div class="mb-3">
      @Html.LabelFor(model => model.Hours)
      @Html.TextBoxFor(model => model.Hours, new {@class = "form-control", placeholder = "M-F 8-5", required="required"})
    </div>
    <button type="submit" class="btn btn-dark">Submit</button>
  }
</form>