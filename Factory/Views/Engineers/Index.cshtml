@{Layout = "_Layout";}

@using Factory.Models;
@model Factory.Models.Engineer;

<h1>Engineers</h1><hr>

@if (@ViewBag.Engineers.Count < 1) {
  <h3>No engineers have been added yet!</h3>
} 
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
        <th scope="col"data-sortable="true">Company Name</th>
        <th scope="col">Primany Contact</th>
        <th scope="col">Phone Number</th>
        <th scope="col">Email Address</th>
        <th scope="col">Business Hours</th>
        <th scope="col"data-sortable="true">Machines Serviced</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>@Model.Company</td>
      </tr>
      <tr>
        loop through comanies & display as <td>Rep</td>
      </tr>
      <tr>
        <th scope="row">Phone Number: </th>
        loop through comanies & display as <td>Phome</td>
      </tr>
      <tr>
        <th scope="row">Email Address:  </th>
        loop through comanies & display as <td>email</td>
      </tr>
      <tr>
        <th scope="row">Address: </th>
        loop through comanies & display as <td>Address1 & Address2</td>
      </tr>
      <tr>
        <th scope="row">Business Hours: </th>
        loop through comanies & display as <td>Hours</td>
      </tr>
      <tr>
        <th scope="row">Machines Serviced: </th>
        loop through comanies & display as <td>Machines</td>
      </tr>
    </tbody>
  </table>