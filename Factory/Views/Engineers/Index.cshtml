      <tr>
        @foreach(Engineer engineer in Model)
        {
          @* <td>@Html.DisplayFor(model => model.Rep)</td> *@
        }
      </tr>
      <tr>
        @foreach(Engineer engineer in Model)
        {
          <td>@Html.DisplayFor(model => model.Phone)</td>
        }
      </tr>
      <tr>
        <th scope="row">Email Address:  </th>
        loop through comanies & display as <td>email</td>
      </tr>
      <tr>
        <th scope="row">Address: </th>
        loop through comanies & display as <td>Address1 & Address2</td>
      </tr>
      <tr>
        <th scope="row">Business Hours: </th>
        loop through comanies & display as <td>Hours</td>
      </tr>
      <tr>
