@{Layout = "_Layout";}

@using Factory.Models;

<h1>Engineers</h1><hr>

@if (@Model.Count == 0 ) {
  <em>No engineers have been added yet</em>
} 
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col"data-sortable="true">Company Name</th>
        <th scope="col">Primany Contact</th>
        <th scope="col">Phone Number</th>
        <th scope="col">Email Address</th>
        <th scope="col">Business Hours</th>
        <th scope="col"data-sortable="true">Machines Serviced</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        @foreach(Engineer engineer in Model)
        {
          <td>@Html.ActionLink($"{engineer.Company}", "Details", new { id = engineer.EngineerId })</td>
