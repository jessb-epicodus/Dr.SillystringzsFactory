@{Layout = "_Layout";}

@using Factory.Models;
@model Factory.Models.Engineer;

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Company</th>
      <th scope="col">Information</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">Company Name: </th>
      loop through comanies & display as <td>@Model.Company</td>
    </tr>
    <tr>
      <th scope="row">Primary Contact: </th>
      <td>Rep</td>
    </tr>
    <tr>
      <th scope="row">Phone Number: </th>
      loop through comanies & display as <td>Phome</td>
    </tr>
    <tr>
      <th scope="row">Email Address:  </th>
      loop through comanies & display as <td>email</td>
    </tr>
    <tr>
      <th scope="row">Address: </th>
      loop through comanies & display as <td>Address1 & Address2</td>
    </tr>
    <tr>
      <th scope="row">Hours: </th>
      loop through comanies & display as <td>Hours</td>
    </tr>
    <tr>
      <th scope="row">Machines Serviced: </th>
      loop through comanies & display as <td>Machines</td>
    </tr>
  </tbody>
</table>
<button type="submit" class="btn btn-dark">Edit</button> | <button type="submit" class="btn btn-dark">Delete </button>