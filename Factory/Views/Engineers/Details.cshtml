@{Layout = "_Layout";}

@using Factory.Models;
@model Factory.Models.Engineer;

<div class="card">
  <div class="card-header">
    <h3>Engineer Details</h3><hr>
  </div>
  <div class="card-body">
    <h5 class="card-title">Special title treatment</h5>
    <p class="card-text">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">CompanyHere</th>
            <th scope="col"> </th>
          </tr>
        </thead>
        <tbody>

          <tr>
            <th scope="row">Primary Contact</th>
            <td>Rep</td>
          </tr>
          <tr>
            <th scope="row">Phone Number </th>
            <td>Phome</td>
          </tr>
          <tr>
            <th scope="row">Email Address</th>
            <td>email</td>
          </tr>
          <tr>
            <th scope="row">Address</th>
            <td>Address1 , Address2</td>
          </tr>
          <tr>
            <th scope="row">Hours</th>
            <td>Hours</td>
          </tr>
          <tr>
            <th scope="row">Licensed to Service</th>
            <td>Machines</td>
          </tr>
        </tbody>
      </table>
    </p>
    <div class="row justify-content-md-center">
      <form method="get" action="/Engineers/Create">
        <button class="btn btn-dark" type="submit">Add Machine</button>
      </form>  
      <form method="get" action="/Engineers/Edit">
        <button class="btn btn-dark" type="submit">Edit</button>
      </form>  
      <form method="get" action="/Engineers/Delete">
        <button class="btn btn-dark" type="submit">Delete</button>
      </form>
    </div>
  </div>
</div>