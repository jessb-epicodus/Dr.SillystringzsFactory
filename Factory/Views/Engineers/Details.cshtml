@{Layout = "_Layout";}

@using Factory.Models;
@model Factory.Models.Engineer;

<div class="card">
  <div class="card-header">
    <h3>Engineer Details</h3>
  </div>
  <div class="card-body">
    <h5 class="card-title">@Model.Company</h5>
    <p class="card-text">
      <table class="table table-striped">
        <tbody>
          <tr>
            <th scope="row">Primary Contact</th>
            <td>Rep</td>
          </tr>
          <tr>
            <th scope="row">Phone Number </th>
            <td>Phome</td>
          </tr>
          <tr>
            <th scope="row">Email Address</th>
            <td>email</td>
          </tr>
          <tr>
            <th scope="row">Address</th>
            <td>Address1 , Address2</td>
          </tr>
          <tr>
            <th scope="row">Hours</th>
            <td>Hours</td>
          </tr>
          <tr>
            <th scope="row">Licensed to Service</th>
            <td>
              @foreach(var join in Model.JoinEntities)
              { 
                @if(@Model.JoinEntities.Count == 0) {
                <em>No machines have been added</em>
              } 
                @join.Machine.MakeModel
              }
              </td>
          </tr>
        </tbody>
      </table>
    </p>
    <div class="row justify-content-md-center">
      <form method="get" action="/Engineers/Create">
        <button class="btn btn-dark" type="submit">Add Machine</button>
      </form>  
      <form method="get" action="/Engineers/Edit">
        <button class="btn btn-dark" type="submit">Edit</button>
      </form>  
      <form method="get" action="/Engineers/Delete">
        <button class="btn btn-dark" type="submit">Delete</button>
      </form>
    </div>
  </div>
</div>