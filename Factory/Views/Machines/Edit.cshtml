@{Layout = "_Layout";}

@using System.Collections.Generic;
@using Factory.Models;
@model Factory.Models.Machine;

<div class="card">
  <div class="card-header">
    <h3>Edit Machine</h3>
  </div>
  <div class="card-body">
    <p class="card-text">
      <div class="col-auto">
      @using (Html.BeginForm()) {
        @Html.HiddenFor(model => model.MachineId)
        <div class="col-auto">
          Make & Model
          @Html.EditorFor(model => model.MakeModel, new {@class = "form-control", required="required"})
        </div>
        <div class="col-auto">
          Serial Number
          @Html.EditorFor(model => model.SerialId, new {@class = "form-control", required="required"})
        </div>
        <br>
        <input type="submit" value="Save" class="btn btn-dark" />
      }
    </p>
  </div>
</div>